---
import BaseLayout from '../layouts/BaseLayout.astro';
import ComparisonCard from '../components/ComparisonCard.astro';
import projects from '../data/projects.json';
---

<BaseLayout
  title="Featured Projects - Abandoned Projects"
  description="Side-by-side comparison of abandoned projects and their actively maintained forks."
>
  <div class="container">
    <header>
      <h1>Featured Projects</h1>
        <p class="subtitle">
          Curated comparisons of abandoned projects and their maintained alternatives
        </p>
      </header>

      <main>
        <div class="comparison-container">
          {projects.map((project) => (
            <ComparisonCard
              original={project.original}
              maintained={project.maintained}
            />
          ))}
        </div>
      </main>

      <footer>
        <p>
          Data last updated: {new Date().toLocaleDateString()}
        </p>
        <p>
          Raising awareness about abandoned dependencies and celebrating the maintainers who keep them alive.
        </p>
        <p>
          <a href="https://github.com/GeorgePearse/AbandonedProjects" target="_blank" rel="noopener noreferrer">
            View on GitHub
          </a>
          {' • '}
          <a href="https://github.com/GeorgePearse/AbandonedProjects#readme" target="_blank" rel="noopener noreferrer">
            Read the Docs
          </a>
          {' • '}
          <a href="https://github.com/GeorgePearse/AbandonedProjects/issues" target="_blank" rel="noopener noreferrer">
            Submit a Fork
          </a>
        </p>
        <p>
          Built with <a href="https://claude.com/claude-code" target="_blank" rel="noopener noreferrer">Claude Code</a>
        </p>
      </footer>
    </div>
</BaseLayout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #000000;
    letter-spacing: -0.02em;
  }

  .subtitle {
    font-size: 1.125rem;
    color: #666666;
    margin-bottom: 3rem;
    font-weight: 400;
  }

  .warning-box {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 1.5rem;
    max-width: 700px;
    margin: 0 auto;
    border: none;
  }

  .warning-box p {
    color: #4a4a4a;
    line-height: 1.7;
    font-size: 0.9375rem;
  }

  .about-section {
    max-width: 800px;
    margin: 4rem auto 0;
    text-align: left;
    background: transparent;
    border: none;
    padding: 0;
  }

  .about-section h2 {
    font-size: 1.25rem;
    margin: 2.5rem 0 1rem 0;
    color: #000000;
    font-weight: 600;
  }

  .about-section h2:first-of-type {
    margin-top: 0;
  }

  .about-section p {
    color: #666666;
    line-height: 1.7;
    margin-bottom: 1rem;
    font-size: 0.9375rem;
  }

  .about-section ul {
    list-style: none;
    padding: 0;
    margin: 1rem 0;
  }

  .about-section li {
    color: #666666;
    line-height: 1.8;
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    font-size: 0.9375rem;
  }

  .about-section li:before {
    content: "•";
    position: absolute;
    left: 0;
    color: #000000;
    font-weight: normal;
  }

  .contribute-box {
    background: #f8f9fa;
    border: none;
    border-radius: 8px;
    padding: 1.5rem;
    margin-top: 2rem;
  }

  .contribute-box h3 {
    margin: 0 0 0.75rem 0;
    color: #000000;
    font-size: 1.125rem;
    font-weight: 600;
  }

  .contribute-box p {
    margin: 0;
    color: #4a4a4a;
    font-size: 0.9375rem;
  }

  .contribute-box a {
    color: #000000;
    text-decoration: underline;
    font-weight: 500;
  }

  .contribute-box a:hover {
    opacity: 0.7;
  }

  .projects-title {
    text-align: center;
    font-size: 1.75rem;
    margin: 5rem 0 3rem 0;
    color: #000000;
    font-weight: 600;
  }

  .comparison-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 5rem;
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
  }

  footer {
    text-align: center;
    padding: 3rem 0 2rem 0;
    border-top: 1px solid #e5e5e5;
    color: #999999;
    font-size: 0.875rem;
  }

  footer p {
    margin: 0.5rem 0;
  }

  footer a {
    color: #666666;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  footer a:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .container {
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .comparison-container {
      gap: 1.5rem;
    }
  }
</style>
